<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="240dp">

            <ImageView
                android:id="@+id/ivHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/uit"
                android:contentDescription="áº¢nh bÃ¬a" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_overlay" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingHorizontal="20dp"
                android:paddingBottom="60dp">

                <TextView
                    android:id="@+id/tvHelloUser"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="Xin chÃ o, User! ðŸ‘‹"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tvGreetingSub" />

                <TextView
                    android:id="@+id/tvGreetingSub"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/greeting_sub"
                    android:textColor="#E0E0E0"
                    android:textSize="15sp"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginTop="-40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/section_opportunity"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FF9800"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:id="@+id/btnGoToOpportunities"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true">
                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:src="@android:drawable/ic_menu_search"
                            app:tint="#0056D2"
                            android:background="@drawable/circle_bg_light_blue"
                            android:padding="12dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/menu_opportunity"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="#333"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnFindMentor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true">
                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:src="@android:drawable/ic_menu_myplaces"
                            app:tint="#7B1FA2"
                            android:background="@drawable/circle_bg_light_purple"
                            android:padding="12dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/menu_mentor"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="#333"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnGoToChat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true">
                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:src="@android:drawable/stat_notify_chat"
                            app:tint="#4CAF50"
                            android:background="@drawable/circle_bg_light_green"
                            android:padding="12dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/menu_chatbot"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="#333"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnGoToBookmark"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true">
                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:src="@drawable/ic_bookmark_filled"
                            app:tint="#FF9800"
                            android:background="@drawable/circle_bg_light_orange"
                            android:padding="12dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/menu_saved"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#333"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/school"
                android:contentDescription="Icon há»c táº­p" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_capsule_outline"
                android:text="@string/section_learning"
                android:textColor="#1565C0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvArticles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:clipToPadding="false"
            android:paddingBottom="20dp"
            tools:listitem="@layout/item_article"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>