<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header_gradient"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="40dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgDetailAvatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_person_24"
                app:civ_border_width="3dp"
                app:civ_border_color="#FFFFFF"/>

            <TextView
                android:id="@+id/tvDetailName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Tên Mentor"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvDetailJob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chức vụ - Công ty"
                android:textColor="#E3F2FD"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:text="Chuyên ngành"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#0D47A1"/>

            <TextView
                android:id="@+id/tvDetailMajor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="..."
                android:layout_marginBottom="32dp"/>

            <Button
                android:id="@+id/btnContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Liên hệ Mentor"
                android:backgroundTint="#0D47A1"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
