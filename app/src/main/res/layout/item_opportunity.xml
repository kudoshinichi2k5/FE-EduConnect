<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ẢNH BÌA -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <ImageView
                android:id="@+id/ivOpportunityImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/uit"
                android:contentDescription="Ảnh cơ hội" />

            <!-- Gradient overlay cho text dễ đọc -->
            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:background="@drawable/gradient_overlay" />

            <!-- TYPE BADGE (Học bổng, Cuộc thi, Sự kiện) -->
            <TextView
                android:id="@+id/tvTypeBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="12dp"
                android:background="@drawable/badge_scholarship"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="Học bổng"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- BOOKMARK ICON (nổi trên ảnh) -->
            <ImageView
                android:id="@+id/ivBookmark"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top|end"
                android:layout_margin="12dp"
                android:src="@drawable/ic_bookmark_border"
                android:padding="8dp"
                android:background="@drawable/circle_white_bg"
                android:clickable="true"
                android:focusable="true"
                app:tint="#FF9800"
                android:contentDescription="Bookmark" />
        </FrameLayout>

        <!-- NỘI DUNG -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Học bổng Doanh nghiệp kì Fall 2025"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#0056D2"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="8dp"/>

            <!-- Description -->
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cơ hội nhận học bổng trị giá 50% học phí dành cho sinh viên IT..."
                android:textSize="14sp"
                android:textColor="#555555"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="12dp"/>

            <!-- Footer: Thời gian + Deadline -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Thời gian đăng -->
                <TextView
                    android:id="@+id/tvTimeAgo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2 giờ trước"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:drawablePadding="4dp"
                    app:drawableStartCompat="@android:drawable/ic_menu_recent_history" />

                <!-- Deadline -->
                <TextView
                    android:id="@+id/tvDeadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hạn: 30/12/2025"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#D32F2F"
                    android:drawablePadding="4dp"
                    app:drawableStartCompat="@android:drawable/ic_menu_my_calendar" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>