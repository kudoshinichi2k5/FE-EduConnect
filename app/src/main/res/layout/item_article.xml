<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ẢNH BÌA -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <ImageView
                android:id="@+id/ivArticleImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/uit"
                android:contentDescription="Ảnh bài viết" />

            <!-- Gradient overlay -->
            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:background="@drawable/gradient_overlay" />

            <!-- CATEGORY BADGE -->
            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="12dp"
                android:background="@drawable/badge_article"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="Kiến thức"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- BOOKMARK ICON -->
            <ImageView
                android:id="@+id/ivBookmark"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top|end"
                android:layout_margin="12dp"
                android:src="@drawable/ic_bookmark_border"
                android:padding="8dp"
                android:background="@drawable/circle_white_bg"
                android:clickable="true"
                android:focusable="true"
                app:tint="#FF9800"
                android:contentDescription="Bookmark" />
        </FrameLayout>

        <!-- NỘI DUNG -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvArticleTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xu hướng ngành CNTT năm 2025: AI lên ngôi"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#0056D2"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="12dp"/>

            <!-- Footer: Thời gian -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvTimeAgo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2 giờ trước"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:drawablePadding="4dp"
                    app:drawableStartCompat="@android:drawable/ic_menu_recent_history" />

                <!-- View count hoặc read time (optional) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đọc ngay >"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#FF9800"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>